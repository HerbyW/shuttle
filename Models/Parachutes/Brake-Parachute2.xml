<PropertyList>

<!-- Brake Parachute -->

	<path>Main-Parachute.ac</path>

	<offsets>
		<x-m>12.0</x-m>
		<y-m>0.0</y-m>
		<z-m>0.0</z-m>
		<pitch-deg>0</pitch-deg>
	</offsets>

	<animation>
		<type>scale</type>
		<x-offset>0.10</x-offset>
                <y-offset>0.65</y-offset>
                <z-offset>0.55</z-offset>                
	</animation>
	
	<animation>
		<type>select</type>
		<condition>            
	          <equals>
                   <property>sim/multiplay/generic/int[3]</property>
                   <value>1</value>
                  </equals>                    
                 </condition>
	</animation>

<animation>
  <type>translate</type>  
  <property>sim/multiplay/generic/float[0]</property>
  <interpolation>
    <entry>
      <ind>39</ind>
      <dep>0</dep>
    </entry>
    <entry>
      <ind>25</ind>
      <dep>125</dep>
    </entry>
    <entry>
      <ind>4</ind>
      <dep>190</dep>
    </entry>
    <entry>
      <ind>0.5</ind>
      <dep>205</dep>
    </entry>
  </interpolation>
  <center>
   <x-m> 0.0</x-m>
   <y-m> 0.0</y-m>
   <z-m> 0.0</z-m>   
  </center>
  <axis>
   <x>0</x>
   <y>0</y>
   <z>1</z>
  </axis>
</animation>    

</PropertyList>
