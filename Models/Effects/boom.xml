<?xml version="1.0"?>

<PropertyList>
<!-- ******************************************************************* -->
<!-- Supersonic Boom Effect by HerbyW     02/2015                        -->
<!-- ******************************************************************* -->

<particlesystem>
		<name>vapor</name>
		<offsets>
			<x-m>30.0</x-m>
			<y-m>0.0</y-m>
			<z-m>0.0</z-m>
			<roll-deg>0.0</roll-deg>
			<pitch-deg>0.0</pitch-deg>
			<heading-deg>0.0</heading-deg>
		</offsets>
      <condition>
         <and>
            <less-than>
                  <property>/velocities/mach</property>
                  <value>1.03</value>
               </less-than>
               <greater-than>
                  <property>/velocities/mach</property>
                  <value>0.97</value>
            </greater-than>
	    <less-than>
               <property>/position/altitude-ft</property>
               <value>37000.0</value>
            </less-than>
         </and>
      </condition>
		<texture>smoke.png</texture>
		<emissive>false</emissive>
		<lighting>false</lighting>
		<attach>world</attach>
		<placer>
			<type>point</type> 
		</placer>
		<shooter>
			<theta-min-deg>10</theta-min-deg>
			<theta-max-deg>20</theta-max-deg>
			<phi-min-deg>0.1</phi-min-deg>
			<phi-max-deg>0.1</phi-max-deg>
			<speed-mps>
				<value>0</value>
				<spread>0</spread>
			</speed-mps>
			<rotation-speed>
				<x-min-deg-sec>0</x-min-deg-sec>
				<y-min-deg-sec>0</y-min-deg-sec>
				<z-min-deg-sec>0</z-min-deg-sec>
				<x-max-deg-sec>0</x-max-deg-sec>
				<y-max-deg-sec>0</y-max-deg-sec>
				<z-max-deg-sec>0</z-max-deg-sec>
			</rotation-speed>
		</shooter>
		<counter>
			<particles-per-sec>
				<value>85</value>
				<spread>0</spread>
			</particles-per-sec>
		</counter>
		<align>billboard</align>
		<particle>
			<start>
				<color>
					<red><value>0.9</value></red>
					<green><value>0.9</value></green>
					<blue><value>0.9</value></blue>
					<alpha><value>0.80</value></alpha>
				</color>
				<size>
					<value>16</value>
				</size>
			</start>
			<end>
				<color>
					<red><value>0.9</value></red>
					<green><value>0.9</value></green>
					<blue><value>0.9</value></blue>
					<alpha><value>0.9</value></alpha>
				</color>
				<size>
					<value>16</value>
				</size>
			</end>
			<life-sec>
				<value>0.02</value>
			</life-sec>
			<mass-kg>1.5</mass-kg>
			<radius-m>2.5</radius-m>
		</particle>
		<program>
			<gravity>false</gravity>
			<wind>false</wind>
		</program>
	</particlesystem>


 
</PropertyList>

